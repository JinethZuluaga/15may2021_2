@model IEnumerable<_15may2021_2.Models.producto_compra>

@{
    ViewBag.Title = "Index";
}

<h2>Todas las compras</h2>
<p>
    @Html.ActionLink("Nueva Compra", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Compra
        </th>
        <th>
            Producto
        </th>
        <th>
            Cantidad
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @_15may2021_2.Controllers.ProductoCompraController.NombreCompra(item.id_compra)

            </td>
            <td>
                @_15may2021_2.Controllers.ProductoCompraController.NombreProducto(item.id_producto)

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidad)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Ver Todo", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "linkDelete" })

            </td>
        </tr>
    }

</table>

@section scripts{
    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿ Esta seguro de eliminar ?')) {
                event.preventDefault();
            }
        })
    </script>
}
